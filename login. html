<body>

<div class="box">
  <h2>Sudan Pay</h2>

  <input type="email" id="email" placeholder="البريد الإلكتروني">
  <input type="password" id="password" placeholder="كلمة المرور">

  <button onclick="register()">إنشاء حساب</button>
  <button onclick="login()">تسجيل دخول</button>

  <p id="msg"></p>
</div>

<script>
  var firebaseConfig = {
    apiKey: "AIzaSyB3vxJu_et-P80ek30I3MRdC_lGhooCCsc",
    authDomain: "sudanpay-e332a.firebaseapp.com",
    projectId: "sudanpay-e332a",
    appId: "1:699809447272:web:90f3780ed6c768c4322add"
  };

  firebase.initializeApp(firebaseConfig);

  function register() {
    var email = document.getElementById("email").value;
    var password = document.getElementById("password").value;

    firebase.auth().createUserWithEmailAndPassword(email, password)
      .then(() => {
        document.getElementById("msg").innerText = "تم إنشاء الحساب بنجاح";
      })
      .catch(e => {
        document.getElementById("msg").innerText = e.message;
      });
  }

  function login() {
    var email = document.getElementById("email").value;
    var password = document.getElementById("password").value;

    firebase.auth().signInWithEmailAndPassword(email, password)
      .then(() => {
        window.location.href = "index.html";
      })
      .catch(e => {
        document.getElementById("msg").innerText = e.message;
      });
  }
</script>

</body>
